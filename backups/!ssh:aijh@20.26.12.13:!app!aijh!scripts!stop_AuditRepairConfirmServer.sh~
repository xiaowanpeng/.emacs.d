#!/bin/sh
checkout(){
	if [ `ps -ef |grep AuditDSServer |grep -v grep|grep -v stop_AuditRepairServer.sh |wc -l` -gt 0 ]
		then
		echo 1
	else 
		echo 0
	fi
}
if [ `checkout` -eq 0 ]
	then
		echo "No process of AuditRepairServer!"
else
	ps -ef|grep AuditDSServer |grep -v grep|grep AuditRepairServer.cfg| grep REPAIR |awk '{print $2}' |xargs kill
        sleep 2
	if [ `checkout` -eq 0 ]
		then 
			echo "The process of AuditRepairServer has been killed !"
		else 
			echo "The process of AuditRepairServer can not kill!"
			fi
fi
