#!/bin/sh
checkout(){
	if [ `ps -ef |grep AuditDSClient |grep -v grep|grep -v stop_AuditRepairClient.sh |wc -l` -gt 0 ]
		then
		echo 1
	else 
		echo 0
	fi
}
if [ `checkout` -eq 0 ]
	then
		echo "No process of AuditRepairClient!"
else
	ps -ef|grep AuditDSClient |grep -v grep|grep AuditRepairClient.cfg| grep REPAIR|awk '{print $2}' |xargs kill
        sleep 2
	if [ `checkout` -eq 0 ]
		then 
			echo "The process of AuditRepairClient has been killed !"
		else 
			echo "The process of AuditRepairClient can not kill!"
			fi
fi
